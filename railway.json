{
  "build": {
    "builder": "nixpacks",
    "buildCommand": "yarn run build",
    "watchPatterns": [
      "src/**",
      "*.json",
      "prisma/schema.prisma",
      "railway.json"
    ]
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5,
    "startCommand": "npm run start"
  }
}